<!-- 标签列表页，展示本站所有标签，url形式：https://yoursite/tags/ -->

<div class="container tags">
  <div class="content-title">
    <h2>
      <span>Tags</span>
    </h2>
  </div>
  <div class="tag-list">
    <% site.tags.sort('length', -1).each(function(tag) { %>
      <li>
        <a href="<%- url_for(tag.path) %>" class="tag-list-link">
          <span><%- tag.name %></span>
          <span class="tag-list-count"><%- tag.length %></span>
        </a>
      </li>
    <% }) %>
  </div>
</div>